# Elixir/Mix paths
MIX_HOME=$HOME/.mix
HEX_HOME=$HOME/.hex

# Phoenix configuration
LANG=C.UTF-8
PHOENIX_PORT=4000

# PostgreSQL configuration
PGDATA="postgres"
PGHOST="postgres"
PGPORT=5432
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/phoenix_dev"

# Replace these values in your local .env
# RELEASE_COOKIE=generate-a-cookie
# PHX_HOST=your-host.com
# SECRET_KEY_BASE=generate-a-secret-key
# POOL_SIZE=10

# Node environment
NODE_ENV=development
